<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <div class="card">
                <div class="card-header">
                    <h1>
                        @Html.DisplayFor(modelItem => item.Titulo)

                    </h1>
                </div>
                <div class="card-body">
                    <footer class="blockquote-footer">@Html.DisplayFor(modelItem => item.CreatedDate)</footer>
                    <blockquote class="blockquote mb-0">

                        @Html.DisplayFor(modelItem => item.Descricao)
                        <footer class="blockquote-footer"> Autor:</footer>
                    </blockquote>

                </div>

                <footer class="blockquote-footer">Categoria: @Html.DisplayFor(modelItem => item.Anime)</footer>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
        </tr>
    }
</tbody>

